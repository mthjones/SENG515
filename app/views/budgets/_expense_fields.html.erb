<tr class="expense">
  <td><%= f.text_field :name, class: "input-xlarge" %></td>
  <td>
    <div class="input-prepend">
      <span class="add-on">$</span>
      <%= f.text_field :amount, class: "input-xlarge", :value => (number_with_precision(f.object.amount || 0, :precision => 2)) %>
    </div>
  </td>
  <td>
    <%= f.hidden_field :_destroy %>
    <%= link_to_function "Remove", "remove_expense(this)" %>
  </td>
</tr>