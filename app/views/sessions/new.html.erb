<h2>Please login to manage workshop</h2>

<%= form_tag( sessions_path, :class =>'form-horizontal well' ) do %>
<div class="control-group">
	<%= label_tag 'Email', nil, :class => 'control-label' %>
	<div class="controls">
		<%= text_field_tag :email, params[:email] %>
	</div>
</div>
<div class="control-group">
	<%= label_tag 'Password', nil, :class => 'control-label' %>
	<div class="controls">
		<%= password_field_tag :password %>
	</div>
</div>
<div class="control-group">
	<div class="controls">
		<%= submit_tag "Log in", :class => "btn btn-large btn-primary" %>
	</div>
</div>
<% end %>