<%= form_for([@workshop, @session], html: {class: 'form-horizontal'}, remote: true) do |f| %>
  <%= render 'shared/error_messages', object: @session %>
  <div class="control-group">
    <%= f.label :title, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :title, class: "input-block-level" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :description, rows: 5, class: "input-block-level" %>
    </div>
  </div>
  
  <div class="control-group">
    <%= label_tag :equipment, nil, class: "control-label" %>
    <div class="controls">
      <%= select_tag :equipment, options_from_collection_for_select(Equipment.all, :id, :name), multiple: true, class: "input-block-level" %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :room, nil, class: "control-label" %>
    <div class="controls">
      <%= f.select :room, options_from_collection_for_select(Room.all, :id, :room_no), {}, class: "input-block-level" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :start_datetime, class: "control-label" %>
    <div class="controls">
      <%= f.datetime_select :start_datetime, start_year: @workshop.start_date.year, start_month: @workshop.start_date.month, start_day: @workshop.start_date.day, minute_step: 15, order: [:day, :month, :year], datetime_separator: ' @ ' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :end_datetime, class: "control-label" %>
    <div class="controls">
      <%= f.datetime_select :end_datetime, start_year: @workshop.end_date.year, start_month: @workshop.end_date.month, start_day: @workshop.end_date.day, minute_step: 15, order: [:day, :month, :year], datetime_separator: ' @ ' %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>