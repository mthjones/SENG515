<h1>Edit Session for <%= @workshop.title %></h1>
<%= form_for([@workshop, @session], html: {class: 'form-horizontal well'}) do |f| %>
  <%= render 'shared/error_messages', object: @session %>
  <div class="control-group">
    <%= f.label :title, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :start_datetime, class: "control-label" %>
    <div class="controls">
      <%= f.datetime_select :start_datetime, start_year: @workshop.start_date.year, start_month: @workshop.start_date.month, start_day: @workshop.start_date.day %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :end_datetime, class: "control-label" %>
    <div class="controls">
      <%= f.datetime_select :end_datetime, start_year: @workshop.end_date.year, start_month: @workshop.end_date.month, start_day: @workshop.end_date.day %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Edit Session", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>