    <div class="well">
      <h1><%= session.title %></h1>
      <p><%= session.description %></p>
      <%= link_to "Edit Session", edit_workshop_session_path(@workshop, session) %>
      //
      <%= link_to "Delete Session", workshop_session_path(@workshop, session), method: "delete", data: { confirm: "Are you sure you want to delete this session?" } %>
    </div>
