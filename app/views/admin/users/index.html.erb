<% if @unverified_users.length > 0 %>
<h1>Unverified Users</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Manage</th>
    </tr>
  </thead>
  <tbody>
    <% @unverified_users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td>
        <%= link_to admin_user_path(user), method: "delete", rel: "tooltip", title: "Delete", data: { confirm: "Are you sure you want to delete this user?" } do %>
          <i class="icon-remove"></i>
        <% end %>
        <%= link_to verify_admin_user_path(user), method: :post, rel: "tooltip", title: "Verify", data: { confirm: "Are you sure you verify this user?" } do %>
          <i class="icon-ok"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<h1>Verified Users</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <th>Manage</th>
    </tr>
  </thead>
  <tbody>
    <% @verified_users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td>
        <%= link_to admin_user_path(user), method: "delete", rel: "tooltip", title: "Delete", data: { confirm: "Are you sure you want to delete this user?" } do %>
          <i class="icon-remove"></i>
        <% end %>
        <% if user.admin? %>
        <%= link_to demote_admin_user_path(user), method: :post, rel: "tooltip", title: "Demote", data: { confirm: "Are you sure you want to remove admin status from this user?" } do %>
          <i class="icon-arrow-down"></i>
        <% end %>
        <% else %>
        <%= link_to promote_admin_user_path(user), method: :post, rel: "tooltip", title: "Promote", data: { confirm: "Are you sure you want to add admin status to this user?" } do %>
          <i class="icon-arrow-up"></i>
        <% end %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
