<h1>Equipment</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Manage</th>
    </tr>
  </thead>
  <tbody>
    <% @equipment.each do |equipment| %>
    <tr>
      <td><%= equipment.name %></td>
      <td><%= equipment.description %></td>
      <td>
        <%= link_to edit_admin_equipment_path(equipment), rel: "tooltip", title: "Edit" do %>
          <i class="icon-edit"></i>
        <% end %>
        <%= link_to admin_equipment_path(equipment), method: "delete", rel: "tooltip", title: "Delete", data: { confirm: "Are you sure you want to delete this equipment?" } do %>
          <i class="icon-remove"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5"><%= link_to "Add new equipment", new_admin_equipment_path %></td>
    </tr>
  </tfoot>
</table>
