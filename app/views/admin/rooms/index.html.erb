<h1>Rooms</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Number</th>
      <th>Location</th>
      <th>Description</th>
      <th>Equipment</th>
      <th>Manage</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
    <tr>
      <td><%= room.room_no %></td>
      <td><%= room.location %></td>
      <td><%= room.description %></td>
      <td><%= room.equipment.map { |e| e.name }.join(", ") %></td>
      <td>
        <%= link_to edit_admin_room_path(room), rel: "tooltip", title: "Edit" do %>
          <i class="icon-edit"></i>
        <% end %>
        <%= link_to admin_room_path(room), method: "delete", rel: "tooltip", title: "Delete", data: { confirm: "Are you sure you want to delete this room?" } do %>
          <i class="icon-remove"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="5"><%= link_to "Add new room", new_admin_room_path %></td>
    </tr>
  </tfoot>
</table>
