<%= form_for(@equipment, html: {class: 'form-horizontal well'}) do |f| %>
  <%= render 'shared/error_messages', object: @post %>
  <div class="control-group">
    <%= f.label :euipement_name, class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: "control-label" %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>


  <div class="control-group">
    <div class="controls">
      <%= f.submit class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>