<div id="user_nav" align="middle" ">
  <% if current_user %>
    <p align="right">Logged in as 
    	<font color="blue"><%= current_user.email %></font>
    	[<%= link_to "Log out", log_out_path %>]
    </p>
  <% else %>
  <p align="right"">
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  </p>
  <% end %>
</div>