<div class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Session Planner", root_path, class: 'brand' %>
			<ul class="nav">
				<li><%= link_to "Blog", posts_path %></li>
				<li><%= link_to "Workshops", workshops_path %></li>
				<li><%= link_to "My Sessions", my_sessions_path %></li>
			</ul>
			<ul class="nav pull-right">
			  <% if current_user %>
			  	<% if current_user.try(:admin?) %>
					<li class="dropdown">
						<%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
							Admin
							<b class="caret"></b>
						<% end %>
						<ul class="dropdown-menu">
			        <li><%= link_to "Equipment", admin_equipment_index_path %></li>
			        <li><%= link_to "Rooms", admin_rooms_path %></li>
			      </ul>
					</li>
					<% end %>
			  	<li class="dropdown">
			      <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
			        <%= current_user.email %>
			        <b class="caret"></b>
			      <% end %>
			      <ul class="dropdown-menu">
			        <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
			      </ul>
			    </li>
			  <% else %>
			    <li><%= link_to "Register", new_user_registration_path %></li>
			    <li class="dropdown">
			      <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
			        Login
			        <b class="caret"></b>
			      <% end %>
			      <div class="dropdown-menu">
			        <%= form_tag user_session_path do %>
			          <%= label_tag 'Email' %>
			          <%= text_field_tag 'user[email]' %>
			          <%= label_tag 'Password' %>
			          <%= password_field_tag 'user[password]' %>
			          <label class="checkbox">
				          <%= check_box_tag 'user[remember_me]' %> Remember me
			          </label>
			          <%= submit_tag "Log in", :class => "btn btn-primary" %>
			          <%= link_to "Forgot your password?", new_password_path('user') %>
			        <% end %>
			      </div>
			  <% end %>
			</div>
		</div>
	</div>
</div>
