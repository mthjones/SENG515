<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Session Planner", root_path, class: 'brand' %>
			<ul class="nav">
				<li>
					<%= link_to "Blog", posts_path %>
				</li>
				<li>
					<%= link_to "Workshops", :workshops %>
				</li>
				<li>
					<%= link_to "Equipment", :equipments %>
				</li>		
			</ul>
			<ul class="nav pull-right">
			  <% if current_user %>
			  	<li class="dropdown">
			      <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
			        <%= current_user.email %>
			        <b class="caret"></b>
			      <% end %>
			      <ul class="dropdown-menu">
			        <li><%= link_to "Logout", signout_path, method: 'delete' %></li>
			      </ul>
			    </li>
			  <% else %>
			    <li><%= link_to "Register", signup_path %></li>
			    <li class="dropdown">
			      <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
			        Login<b class="caret"></b>
			      <% end %>
			      <div class="dropdown-menu">
			        <%= form_tag user_sessions_path do %>
			          <%= label_tag 'Email' %>
			          <%= text_field_tag :email %>
			          <%= label_tag 'Password' %>
			          <%= password_field_tag :password %>
			          <%= submit_tag "Log in", :class => "btn btn-primary" %>
			        <% end %>
			      </div>
			  <% end %>
			</div>
		</div>
	</div>
</div>
